    <script type="text/javascript">
        $('#search')
            .focus(function() { 
                if (this.value == this.title) {
                    this.value = '';
                    $(this).removeClass('search-box-blur');
                }
            })
            .blur(function() {
                if (this.value == '') {
                    this.value = this.title;
                    $(this).addClass('search-box-blur');
                }
            })
            .blur();
        settings = {};    
        settings.contentPath = "http://cdn.sstatic.net/stackexchange";
    </script>

    
